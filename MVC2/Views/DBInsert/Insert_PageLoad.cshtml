


@model MVC2.Models.UserInsert
@{
    ViewBag.Title = "Insert_PageLoad";
}

<h1>User Reg</h1>
<div>
    @using (Html.BeginForm("Insert_click", "DBInsert", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <label>Name:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div>
            <label>Age:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Age)
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div>
            <label>Address:</label>
        </div>
        <div>
            @Html.TextAreaFor(m => m.Address)
            @Html.ValidationMessageFor(m => m.Address)
        </div>

        <div>
            <label>Email:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Email)

            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div>
            <label>Photo:</label>
        </div>
        <div>
            @Html.TextBox("file", "", new { Type = "file" })

        </div>

        <div>
            <label>Gender:</label>
        </div>
        <div>
            Male
            @Html.RadioButtonFor(m => m.Gender, "Male")
            Female
            @Html.RadioButtonFor(m => m.Gender, "Female")

        </div>
        <div>
            <label>States:</label>
        </div>
        <div>
            @Html.DropDownList("Selstates", (SelectList)ViewBag.Selstates, "--Select--", new { @class = "form-control" })

            @*@Html.TextBoxFor(m => m.State)*@

        </div>
        <div>
            <label>Qualification:</label>
        </div>

        <div>
            @foreach (var item in Model.MyFavoriteQual)
            {

                <label>
                    <input type="checkbox" value="@item.Value" checked="@item.IsChecked" name="selectedQual" id="@item.Value" /> @Html.Raw(item.Text)
                </label>
            }

            @*@Html.TextBoxFor(m => m.selectedQual)*@
        </div>

        <div>
            <label>UserName:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Username)
            @Html.ValidationMessageFor(m => m.Username)
        </div>



        <div>
            <label>Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.Pwd)
            @Html.ValidationMessageFor(m => m.Pwd)
        </div>

        <div>
            <label> Confirm Password:</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.CPassword)
            @Html.ValidationMessageFor(m => m.CPassword)
        </div>

        <div>
            <input type="submit" value="insert" />
        </div>



    }

</div>